<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Ip</th>
      <th>Success Rate</th>
      <th>Uses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proxy_urls.each do |proxy_url| %>
      <tr>
        <td><%= proxy_url.ip %> <%= proxy_url.num_success + proxy_url.num_failures %></td>
        <td><%= 100.0 * proxy_url.num_success / (proxy_url.num_success + proxy_url.num_failures) %></td>
        <td><%= proxy_url.num_success + proxy_url.num_failures %></td>
        <td><%= link_to 'Show', proxy_url %></td>
        <td><%= link_to 'Edit', edit_proxy_url_path(proxy_url) %></td>
        <td><%= link_to 'Destroy', proxy_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

